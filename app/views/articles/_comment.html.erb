<div>
  <h4>Comment by <%= comment.author_name %></h4><p>Posted <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</p>
  <p class="comment"><%= comment.body %></p>
  <% if logged_in? %>
    <% if comment.author_name == current_user.username %>
      <%= link_to "Delete", comment_path(comment), method: :delete, data: {confirm: "Really delete the Comment?"} %>
      <%= link_to " Edit", edit_comment_path(comment) %>
    <% end %>
  <% end %>
</div>